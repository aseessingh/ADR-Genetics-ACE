import os
import shutil

# Lists all files in the /content folder
def list_files_in_content_folder():
    content_folder = "/content"
    files = [filename for filename in os.listdir(content_folder)]
    return ", ".join([f"'{file}'" for file in files])

# Downloads all files from the /content folder to local machine
def download_files_in_folder(folder_path):
    for filename in os.listdir(folder_path):
        file_path = os.path.join(folder_path, filename)
        if os.path.isfile(file_path):
            try:
                shutil.copy(file_path, ".")
            except:
                pass
